<script>
    // 모든 td 요소를 가져옴
    const tdElements = document.querySelectorAll('.intro_table td');

    tdElements.forEach(td => {
        // 각 td 요소에 클릭 이벤트를 추가
        td.addEventListener('click', function() {
            // 현재 on 클래스가 있는 td 요소를 찾음
            const currentOn = document.querySelector('.intro_table .on');
            if (currentOn) {
                // 기존에 on 클래스가 있는 요소에서 on 클래스를 제거
                currentOn.classList.remove('on');
            }
            // 클릭된 td 요소에 on 클래스를 추가
            this.classList.add('on');
            
         	// 클릭된 td의 id에서 숫자를 추출
            const selectedId = this.id.replace('intro', 'dtl');
         	
         	// 모든 dtl 행을 숨김 처리
            const dtlRows = document.querySelectorAll('.intro_dtl_table tr[id^="dtl"]');
            dtlRows.forEach(row => row.hidden = true);
            
            const selectedRow = document.getElementById(selectedId);
            if (selectedRow) {
                selectedRow.hidden = false;
            }
            
        });
    });
</script>
