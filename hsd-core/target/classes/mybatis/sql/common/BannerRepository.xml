<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.hsd.core.common.repository.BannerRepository">

    <resultMap id="simpleBannerResult" type="banner">
        <id		property="idx" column="IDX" />
        <result property="gubun" column="GUBUN" />
        <result property="title" column="TITLE" />
        <result property="imagePath" column="IMAGE_PATH" />
        <result property="imagePathM" column="IMAGE_PATH_M" />
        <result property="link" column="LINK" />
    </resultMap>

    <select id="getBannerList" resultMap="simpleBannerResult">
        SELECT * FROM TB_BANNER WHERE GUBUN = #{gubun} ORDER BY SORT ASC
    </select>
</mapper>